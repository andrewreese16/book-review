<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= book.title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/show-books.css" />
  </head>
  <body
    class="show-body"
    aria-label="background image of wall of books on shelf"
  >
    <%- include('../partials/_navbar.ejs') %>

    <div class="container">
      <div class="card">
        <h1><%= book.title %> by <%= book.author %></h1>
        <p>Genre: <%= book.type %></p>
        <p class="book-description"><%= book.description %></p>

        <% if (user && book.createdBy && book.createdBy.equals(user._id)) { %>
        <div class="book-actions">
          <a href="/books/<%= book._id %>/edit" class="btn btn-secondary"
            >Edit Book</a
          >
          <form
            action="/books/<%= book._id %>?_method=DELETE"
            method="POST"
            class="form-inline"
          >
            <button type="submit" class="btn btn-danger">Delete Book</button>
          </form>
        </div>
        <% } %>

        <h2>Reviews</h2>
        <% if (book.review.length === 0) { %>
        <p>No reviews yet. Be the first to review this book!</p>
        <% } else { %> <% book.review.forEach(function(review) { %>
        <div class="review-item">
          <p>
            <strong><%= review.username.toUpperCase() %></strong>: <%=
            review.content %>
          </p>
          <p>Rating: <%= review.rating %> / 5</p>

          <% if (user && review.user && review.user.equals(user._id)) { %>
          <form
            action="/books/<%= book._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="POST"
            class="form-inline"
          >
            <button type="submit" class="btn btn-danger">Delete Review</button>
          </form>
          <% } %>
        </div>
        <% }); %> <% } %> <% if (user) { %>
        <h3>Add a Review</h3>
        <form action="/books/<%= book._id %>/reviews" method="POST">
          <div class="form-group">
            <label for="content">Review:</label>
            <textarea
              name="content"
              id="content"
              class="form-control"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="rating">Rating:</label>
            <input
              type="number"
              name="rating"
              id="rating"
              min="1"
              max="5"
              class="form-control"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
        <% } else { %>
        <div class="cta-section">
          <p>Sign in to add a review or contribute to our book collection!</p>
          <div class="cta-buttons">
            <a href="/auth/sign-up" class="btn btn-primary">Sign Up</a>
            <a href="/auth/sign-in" class="btn btn-secondary">Sign In</a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
