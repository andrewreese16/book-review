<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books Collection</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/books-index.css" />
  </head>
  <body class="book-index">
    <%- include('../partials/_navbar.ejs') %>
    <header class="hero" aria-label="background image of light sky">
      <form action="/books" method="GET" class="search-filter-form">
        <input
          type="text"
          name="q"
          placeholder="Search Books and Authors..."
          value="<%= searchQuery %>"
        />
        <select name="type" id="type">
          <option value="All" <%= selectedType === 'All' ? 'selected' : '' %>>All Types</option>
          <% types.forEach(type => { %>
            <option value="<%= type %>" <%= selectedType === type ? 'selected' : '' %>><%= type %></option>
          <% }); %>
        </select>
        <button type="submit">Search</button>
      </form>
      <% if (searchQuery || selectedType !== 'All') { %>
      <p class="search-results-info">
        <% if (searchQuery) { %>
          Showing results for "<%= searchQuery %>"
        <% } %>
        <% if (selectedType !== 'All') { %>
          <% if (searchQuery) { %> and <% } %>
          filtered by type: <%= selectedType %>
        <% } %>
        <a href="/books" class="clear-search">Clear filters</a>
      </p>
      <% } %>

      <div class="hero-content">
        <% if (user) { %>
        <p class="welcome-message">Hello, <%= user.username.toUpperCase() %></p>
        <% } %>
        <h1 class="welcome-message">
          Below are a collection of great books and reviews!
        </h1>
        <% if (!user) { %>
        <div class="cta-buttons">
          <a href="/auth/sign-up" class="btn btn-primary">Sign Up</a>
          <a href="/auth/sign-in" class="btn btn-secondary">Sign In</a>
        </div>
        <% } %>
      </div>
    </header>

    <section class="book-collection">
      <div class="book-grid">
        <% books.forEach(book => { %>
        <div class="book-card">
          <a class="book-link" href="/books/<%= book._id %>">
            <h3><%= book.title %></h3>
            <p>By <%= book.author %></p>
            <p>Type: <%= book.type %></p>
          </a>
        </div>
        <% }) %>
      </div>
    </section>
  </body>
</html>